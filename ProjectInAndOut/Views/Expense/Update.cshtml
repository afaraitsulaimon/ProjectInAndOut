@model ProjectInAndOut.Models.Expense

<form method="post" asp-action="Update">
    <input asp-for="Id" hidden/>
   <div class="border p-3">
 
       </div>
       <div class="form-group row">
           <h2 class="text-black-50 pl-3">Update Expense</h2>
       </div>
       <div class="row">
           <div class="col-12">
               <div class="form-group row">
                   <div class="col-4">
                       <label asp-for="ExpenseName"></label>
                   </div>
                   <div class="col-4">
                        <label asp-for="Amount"></label>

                   </div>
              
                   <div class="col-4">
                        <label asp-for="ExpenseType"></label>

                   </div>

               </div>

                  <div class="form-group row">
                   <div class="col-4">
                       <input asp-for="ExpenseName" class="form-control" />
                      <span asp-validation-for="ExpenseName"></span>

                   </div>
                   <div class="col-4">
                        <input asp-for="Amount" class="form-control" />
                         <span asp-validation-for="Amount"></span>

                   </div>

                       <div class="col-4">
                        <select asp-for="ExpenseTypeId" asp-items="@ViewBag.TypeDropDown" class="form-control" >
                            <option selected> --Select Expense Type-- </option>
                        </select>
                        <span asp-validation-for="ExpenseTypeId"></span>

                   </div>
                

               </div>
               
                  <div class="form-group row mt-4">
                   <div class="col-8 offset-2 row">
                       <div class="col">
                       <input type="submit" class="btn btn-info w-75" value="Update" />
                   </div>
                 <div class="col">
                       <a class=" btn btn-danger w-75" asp-controller="Expense" asp-action="Index">Back</a>
                   </div>
                   </div>
  

               </div>
           </div>

       </div>
   </div>
</form>

@section Scripts{
    @{ <partial name="_ValidationScriptsPartial" />}
}
